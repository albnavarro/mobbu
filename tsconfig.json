// https://github.com/Artxe2/jsdoc-subpkg-example
// https://dev.to/artxe2/how-to-set-up-jsdoc-for-npm-packages-1jm1

{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "lib": ["ES2023", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "noPropertyAccessFromIndexSignature": true,
        "skipLibCheck": true,
        "strict": false,
        "target": "ESNext"
    },
    "ts-node": { "esm": true },
    "include": ["src/js/mobjs", "src/js/mobMotion", "src/js/mobCore"]
}
