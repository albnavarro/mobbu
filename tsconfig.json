{
    "compilerOptions": {
        "types": [
            // ... your other types
            "node"
        ],
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "noPropertyAccessFromIndexSignature": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "baseUrl": ".",
        "paths": {
            // mobCore
            "@mobCore": ["./src/js/mob/mob-core"],
            "@mobStoreType": ["./src/js/mob/mob-core/store/type"],
            "@mobCoreUtils": ["./src/js/mob/mob-core/utils"],

            // mobJs
            "@mobJs": ["./src/js/mob/mob-js"],
            "@mobJsType": ["./src/js/mob/mob-js/type"],

            // mobMotion
            "@mobMotion": ["./src/js/mob/mob-motion"],
            "@mobMotionType": ["./src/js/mob/mob-motion/type"],
            "@mobMotionPlugin": ["./src/js/mob/mob-motion/plugin"],

            // components
            "@commonComponent/*": ["./src/js/component/common/*"],
            "@layoutComponent/*": ["./src/js/component/layout/*"],
            "@pagesComponent/*": ["./src/js/component/pages/*"],
            "@componentLibs/*": ["./src/js/component/lib/*"],

            // utils
            "@utils/*": ["./src/js/utils/*"],

            // add data
            "@data/*": ["./src/js/data/*"]
        }
    },
    "ts-node": { "esm": true },
    "include": [
        "src/js/main.js",
        "src/js/mob/mob-js",
        "src/js/mob/mob-motion",
        "src/js/mob/mob-core",
        "src/js/component",
        "src/js/pages",
        "src/js/wrapper",
        "src/js/pageTransition",
        "src/js/utils"
    ]
}
