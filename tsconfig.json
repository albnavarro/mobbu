// https://github.com/Artxe2/jsdoc-subpkg-example
// https://dev.to/artxe2/how-to-set-up-jsdoc-for-npm-packages-1jm1
//"lib": ["ES2023", "DOM", "DOM.Iterable"],

{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "noPropertyAccessFromIndexSignature": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "paths": {
            "@mobCore": ["./src/js/mob/mobCore"],
            "@mobStoreType": ["./src/js/mob/mobCore/store/type"],
            "@mobCoreUtils": ["./src/js/mob/mobCore/utils"],
            "@mobJs": ["./src/js/mob/mobjs"],
            "@mobJsType": ["./src/js/mob/mobjs/type"],
            "@mobMotion": ["./src/js/mob/mobMotion"],
            "@mobMotionType": ["./src/js/mob/mobMotion/type"],
            "@mobMotionPlugin": ["./src/js/mob/mobMotion/plugin"]
        }
    },
    "ts-node": { "esm": true },
    "include": [
        "src/js/main.js",
        "src/js/mob/mobjs",
        "src/js/mob/mobMotion",
        "src/js/mob/mobCore",
        "src/js/component",
        "src/js/pages",
        "src/js/wrapper",
        "src/js/pageTransition"
    ]
}
