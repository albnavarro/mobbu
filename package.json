{
    "name": "mobbu",
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "build:css": "sass src/scss/style.scss dist/css/style.css",
        "build:js": "esbuild src/js/main.js --bundle  --outfile=./dist/js/scripts.js --watch --servedir=dist",
        "watch:css": "onchange 'src/scss/*.scss' -- npm run build:css",
        "watch:js": "onchange 'src/js/*.js' -- npm run build:js ",
        "dev": "concurrently --kill-others \"npm run build:js\" \"npm run watch:css\""
    },
    "devDependencies": {
        "concurrently": "^7.6.0",
        "eslint": "^8.20.0",
        "npm": "^8.3.0",
        "onchange": "^7.1.0",
        "postcss": "^8.4.21",
        "prettier-eslint-cli": "^6.0.1",
        "sass": "^1.48.0",
        "stylelint": "^14.16.0",
        "stylelint-config-standard-scss": "^6.1.0",
        "stylelint-scss": "^4.2.0"
    },
    "dependencies": {
        "esbuild": "0.17.10",
        "sass-math": "^1.0.0",
        "sass-mq": "^6.0.0"
    }
}
