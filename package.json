{
  "name": "mobbu",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "scss": "sass assets/scss/style.scss dist/css/style.css",
    "build:css": "npm run scss",
    "build:js": "esbuild assets/js/main.js --bundle --outfile=./dist/js/scripts.js",
    "watch:css": "onchange 'assets/scss/*.scss' -- npm run build:css",
    "watch:js": "onchange 'assets/js/*.js' -- npm run build:js",
    "update": "browser-sync start --server dist --files dist",
    "watch": "concurrently --kill-others \"npm run watch:js\" \"npm run watch:css\" \"npm run update\""
  },
  "devDependencies": {
    "browser-sync": "^2.28.1",
    "concurrently": "^7.6.0",
    "npm": "^8.3.0",
    "onchange": "^7.1.0",
    "sass": "^1.48.0"
  },
  "dependencies": {
    "esbuild": "0.17.10"
  }
}
